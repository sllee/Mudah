
<form action="/logout" method="post">
	<input type="submit" value="Logout">
</form>

<form method="get" action="/products">
	<input type="submit" value="Back">
</form>


<h4> Product: <%= @products.product_name%></h4>
	price (RM) :<%= @products.price%><br>
<% if current_user.id == @products.user_id %>
	<p>There are <%= @products.favourites.count %> favourites of this product</p><br>
	<form method="get" action="/products/<%=@products.id%>/edit">
		<input type="submit" value="Edit">
	</form>
	<form method="post", action="/products/<%=@products.id%>">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Delete">
	</form>
<%end%>
<% if current_user.id != @products.user.id %> 

	<form action="/user/<%=current_user.id%>/favourites/<%=@products.id%>" method="post">
<!-- 		<input name="product" value="<%= @products.product_name%>"> -->
		<input type="submit" value="Add to Favourite">
	</form>
<% end %>


